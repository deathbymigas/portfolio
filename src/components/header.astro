---
interface Props {
  variant: 'home' | 'casestudy';
}
const { variant } = Astro.props;
import EditModeBox from './EditModeBox.astro';
---

{variant === 'home' ? (
  <div class="header-wrapper">    
    <EditModeBox as="div" variant="large">
    Jesse Basham
    </EditModeBox>
  </div>
    ) : (
    <EditModeBox as="a" variant="small" href="/" ariaLabel="Return to homepage">
    Jesse Basham | UX & Product Design
    </EditModeBox>
    )
}

<style>
  .header-wrapper {
    display: flex;
    justify-content: center;
  }
  .site-name-large {
    font-family: var(--font-mono);
    font-size: 24px;
    font-weight: 700;
    text-align: center;
    border: 1px solid var(--color-edit-mode);
    padding: var(--space-xs);
    margin-top: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .site-name-small {
    font-family: var(--font-mono);
    font-size: 16px;
    font-weight: 700;
    display: block;
    text-align: center;
    padding: var(--space-xs);
    border: 1px solid var(--color-edit-mode);
    margin-top: var(--space-md);
    margin-bottom: var(--space-md);
  }

  /* Tablet/Medium (768px - 1024px) */
    @media (max-width: 1024px) and (min-width: 769px) {
    .site-name-large {
        margin-top: var(--space-md);
    }
    
    .site-name-small {
        margin-top: var(--space-md);
    }
    }

  /* Mobile (up to 768px) */
    @media (max-width: 768px) {
    .site-name-large {
        font-size: 20px;
        margin-top: var(--space-sm); 
    }
    
    .site-name-small {
        font-size: 14px;
        margin-top: var(--space-sm);
    }
    }
</style>