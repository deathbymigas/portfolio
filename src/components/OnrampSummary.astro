---
interface Props {
  client: string;
  clientUrl?: string;
  role: string;
  timeline: string;
  focus: string;
  outcomes: string;
  metrics: string;
}

const { client, clientUrl, role, timeline, focus, outcomes, metrics } = Astro.props;
import onrampLaptop from '../assets/onramp-laptop.png';
---

<section class="onramp-summary">
  <div class="shape-rectangle">
    <div class="metadata">
        <dl>
        <div class="meta-item">
        <dt>Client</dt>
        <dd>
            {clientUrl ? (
            <a href={clientUrl} target="_blank" rel="noopener noreferrer">
                {client}
                <span class="sr-only"> (opens in new tab)</span>
            </a>
            ) : (
            client
            )}
        </dd>
        </div>
        <div class="meta-item">
            <dt>Role</dt>
            <dd>{role}</dd>
        </div>
        <div class="meta-item">
            <dt>Timeline</dt>
            <dd>{timeline}</dd>
        </div>
        <div class="meta-item">
            <dt>Focus</dt>
            <dd>{focus}</dd>
        </div>
        <div class="meta-item">
            <dt>Outcomes</dt>
            <dd>{outcomes}</dd>
        </div>
        <div class="meta-item">
            <dt>Metrics</dt>
            <dd>{metrics}</dd>
        </div>
        </dl>
    </div>
  </div>
  
  <!-- Teal circle SVG -->
  <svg class="shape-circle" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
    <circle cx="100" cy="100" r="100" fill="rgba(61, 187, 222, 0.12)" />
  </svg>
  
  <!-- Laptop mockup -->
  <img 
    src={onrampLaptop.src}
    alt="Illustration of a laptop displaying the Onramp Funds UI" 
    class="laptop-mockup"
  />
  
  
</section>

<style>
  .onramp-summary {
    position: relative;
    width: 100%;
    min-height: 400px;
  }
  
  .shape-rectangle {
    background: rgba(26, 236, 96, 0.12);
    border-radius: 4px;
    width: 100%;
    padding: var(--space-lg);
  }
  
  .shape-circle {
    position: absolute;
    z-index: 1;
    pointer-events: none;
  }
  
  .laptop-mockup {
    position: absolute;
    height: auto;
    z-index: 2;
    pointer-events: none;
  }
  
  .metadata {
    position: relative;
    z-index: 3;
    max-width: 450px;
  }
  
  dl {
    display: grid;
    gap: var(--space-sm);
  }
  
  .meta-item {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: var(--space-xs);
    align-items: baseline;
  }
  
  dt {
    font-family: var(--font-mono);
    font-weight: 700;
    font-size: 14px;
    line-height: 1.5;
  }
  
  dd {
    font-family: var(--font-sans);
    font-size: 16px;
    line-height: 1.5;
  }
  
  /* Stacked layout */
  @media (max-width: 660px) {
    .onramp-summary {
      min-height: auto;
      padding-top: 32%; /* Scales with container width */
    }
    
    .shape-rectangle {
      margin-top: 0;
      margin-bottom: var(--space-lg);
      padding: var(--space-md);
      min-height: auto;
    }
    
    .shape-circle {
      width: min(380px, 48%);
      height: min(380px, 48%);
      aspect-ratio: 1;
      top: -80px;
      left: 0;
      right: auto;
    }
    
    .laptop-mockup {
      width: min(415px, 80%);
      max-width: 415px;
      top: -8%;
      left: 50%;
      right: auto;
      bottom: auto;
      transform: translateX(-50%);
    }
    
    .metadata {
      max-width: 100%;
      padding-top: 0;
    }
    
    .meta-item {
      grid-template-columns: 1fr;
    }
  }
  
/* Side-by-side images, stacked metadata */
@media (min-width: 661px) and (max-width: 800px) {
  .meta-item {
    grid-template-columns: 1fr; /* Stack label above value like mobile */
  }
  
  .metadata {
    max-width: min(500px, 46%);
  }
  
  dl {
    gap: var(--space-sm); /* Maintain spacing between items */
  }

    .shape-circle {
    width: min(380px, 80%);
    height: min(380px, 80%);
    aspect-ratio: 1;
    top: -20px;
    right: 60px;
  }
  
  .laptop-mockup {
    width: min(415px, 49%);
    max-width: 415px;
    right: 12px;
    bottom: 120px;
  }
}

/* Side-by-side images, side-by-side metadata */
@media (min-width: 801px) {
  .meta-item {
    grid-template-columns: 100px 1fr; /* Labels beside values */
  }
  
  .metadata {
    max-width: min(480px, 50%);
  }
  
  .shape-circle {
    width: min(380px, 100%);
    height: min(380px, 100%);
    aspect-ratio: 1;
    top: -20px;
    right: 60px;
  }
  
  .laptop-mockup {
    width: min(415px, 43%);
    max-width: 415px;
    right: 12px;
    bottom: 120px;
  }
}
</style>